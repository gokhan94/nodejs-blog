include partials/header

div.main-login
    div.login
            header
                h2 Reset Password !
    div.login-content
        form(method='POST' action='/auth/reset-password/' + token + '/' + email )
            ul 
                li 
                    label.user-title(for="name") Email: 
                    input(type="text" name="email" id="email"  required) 
                li 
                    label.user-title(for="password") Password: 
                    input(type="password" name="password" id="password"  required) 
                li
                    button(type="submit") Reset Password